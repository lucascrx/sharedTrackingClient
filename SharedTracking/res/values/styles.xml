<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:actionBarStyle">@style/CustomActionBarColor</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
   <style name="CustomActionBarColor" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextStyle">@style/CustomActionBarText</item>
    </style>
    

    <style name="CustomActionBarText" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
