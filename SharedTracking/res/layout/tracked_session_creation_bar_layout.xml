<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical">  
    
       <ImageButton
        android:id="@+id/tracked_session_creation_bar_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="?android:selectableItemBackground"
        android:soundEffectsEnabled="true"
        android:gravity="start"/>
        
        
        <TextView
         android:id="@+id/tracked_session_creation_bar_title"
         android:text="@string/tracked_session_creation_title_dialogue"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/white"
	    android:layout_width="0dp"
	    android:layout_weight="10"
	    android:layout_height="match_parent"
	    android:ellipsize="end"/>
        
        <ImageButton
        android:id="@+id/tracked_session_creation_bar_validation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_check_white_24dp"
        android:background="?android:selectableItemBackground"
        android:soundEffectsEnabled="true"
        android:gravity="end"/>
        
</LinearLayout>