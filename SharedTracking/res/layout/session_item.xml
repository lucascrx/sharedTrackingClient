<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/primary_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="false"
    android:background="@drawable/list_item_selector">
    
    
        <ImageView
        android:id="@+id/session_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
        
        <LinearLayout
        android:id="@+id/text_layout"
   	 	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:layout_weight="10" >
    	
           	<TextView
        	android:id="@+id/session_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:singleLine="true"
        	android:textColor="@color/blue"/>
           	
           	<LinearLayout
	    	android:id="@+id/starting_time_layout"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	
	           	<TextView
		    	android:id="@+id/starting_time_title"
		    	android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:gravity="end"
		    	android:layout_marginEnd="3dp"
		    	android:layout_marginRight="3dp"
		    	android:text="@string/item_starting_time_title"
		    	android:layout_weight="1"/>
    			
           		<TextView
        		android:id="@+id/starting_time"
        		android:layout_width="0dp"
        		android:layout_height="wrap_content"
        		android:gravity="start"
        		android:layout_marginStart="3dp"
		    	android:layout_marginLeft="3dp"
        		android:layout_weight="1"/>
           
           </LinearLayout>
           		
           	<LinearLayout
	    	android:id="@+id/ending_time_layout"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	
	    		<TextView
		    	android:id="@+id/ending_time_title"
		    	android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:gravity="end"
		    	android:layout_marginEnd="3dp"
		    	android:layout_marginRight="3dp"
		    	android:text="@string/item_ending_time_title"
		    	android:layout_weight="1"/>
	    	
	    	
           		<TextView
        		android:id="@+id/ending_time"
        		android:layout_width="0dp"
        		android:layout_height="wrap_content"
        		android:gravity="start"
        		android:layout_marginStart="3dp"
        		android:layout_marginLeft="3dp"
        		android:layout_weight="1"/>
           		
           </LinearLayout>
           	
          	<TextView
        	android:id="@+id/public_token"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textStyle="bold"
        	android:singleLine="true"
        	android:layout_gravity="center"/>
 
    	</LinearLayout>
    	

          	
     	<ImageView
		android:id="@+id/session_status"        
		android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
        
    </LinearLayout>
    

